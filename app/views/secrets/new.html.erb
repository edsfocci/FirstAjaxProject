<form action="<%= secrets_url %>" method="post">
  <label for="secret_title">Title</label>
  <input
     type="hidden"
     name="authenticity_token"
     value="<%= form_authenticity_token %>">

  <input
     type="hidden"
     name="secret[recipient_id]"
     value="<%= @recipient_id %>">
  <input
     type="text"
     name="secret[title]"
     id="secret_title">

  <input type="submit">
</form>
